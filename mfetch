#!/bin/bash

# mfetch -  a minimalist fetch to get what you want when you need it

me=$(whoami)
host=$(cat /etc/hostname)
os=$(source /etc/os-release; echo $NAME)
kr=$(uname -r | sed 's/-.*//g')
up=$(uptime -p | sed 's/up //g;s/ days,/d/g;s/ hours,/h/g;s/ minutes/m/g;s/ day,/d/g;s/ hour,/h/g;s/ minute/m/g')
de=$(echo "${XDG_CURRENT_DESKTOP}")
wm=$(xprop -id $(xprop -root -notype | awk '$1=="_NET_SUPPORTING_WM_CHECK:"{print $5}') | awk '/WM_NAME/ {print $3}' | sed 's/\"//g')
sh=$(basename ${SHELL})
term=$(echo $TERMINAL)

[[ -z $de ]] && de="none"

echo -e "
\e[34m me: \e[0m${me}
\e[34m hs: \e[0m${host}
\e[34m os: \e[0m${os}
\e[34m kr: \e[0m${kr}
\e[34m up: \e[0m${up}
\e[34m de: \e[0m${de}
\e[34m wm: \e[0m${wm}
\e[34m sh: \e[0m${sh}
\e[34m tr: \e[0m${term}"
echo -e \\n \\e[10{0..7}m\ \ \\e[m \\n \\e[4{0..7}m\ \ \\e[m \\n

# ^^^ https://github.com/dylanaraps/bin/blob/master/16
